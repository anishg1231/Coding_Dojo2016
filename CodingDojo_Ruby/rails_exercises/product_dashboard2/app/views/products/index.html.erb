<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All The Products</title>
  </head>
  <body>
    <h1>Listing Products</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Category</th>
          <th>Action</th>
        </tr>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.name%></td>
            <td><%= product.description%></td>
            <td>$ <%= product.pricing%></td>
            <td>$ <%= product.category.name%></td>

            <td>
              <a href="/products/<%=product.id%>">Show</a>  |
              <a href="/products/<%=product.id%>/edit">Edit</a> |
              <a href="/products/<%=product.id%>" data-method="delete">Destroy</a>
            </td>
          </tr>
          <%end%>
        </tbody>
      </thead>
    </table>
    <a href="products/new">New Product</a>
  </body>
</html>
