<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>User Management System</h1>
    <table class="table table-striped" style="width: 600px">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email_address %></td>
            <td>
              <a href="/users/<%= user.id %>">Show</a>  |   <a href="/users/<%= user.id %>/edit">Edit</a>  |   <a href="users/<%= user.id %>" data-method='delete'>Delete</a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
    <a href="/users/new">New User</a>
  </body>
</html>
