<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
    <link rel="stylesheet" href="../static/style.css">
  </head>
  <body>
    <%= messages %>
    <h1>Welcome to the Dojo Message Board</h1>
    <form action="/messages" method="post">
      Name: <input type="text" name="name"><br>
      Message: <br> <textarea name="message" rows="8" cols="40"></textarea><br>
      <button>Post Message</button>
    </form>
    <% for (var message in messages) { %>
      <div class="messages">
        <h2>Name: <%=messages[message].name %></h2>
        <h2>Message: <%=messages[message].message %></h2>
        <% for (var idx = 0; idx < messages[message]._comments.length; idx++) {%>

        <div class="comments">
          <h4>Name: <%= messages[message]._comments[idx].name %></h4>
          <h4>Comment: <%= messages[message]._comments[idx].comment %></h4>
        </div>
        <% } %>
        <form action="/comments/<%= messages [message]._id%>" method="post">
          Name: <input type="text" name="name"><br>
          Comment: <br> <textarea name="comment" rows="8" cols="40"></textarea><br>
          <button>Post a Comment</button>
        </form>

      </div>
    <% } %>
  </body>
</html>
